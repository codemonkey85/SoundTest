@inherits LayoutComponentBase

<MudThemeProvider @ref="@mudThemeProvider"
                  @bind-IsDarkMode="@isDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudText>
            SoundTest
        </MudText>
        <MudIconButton Icon="@Icons.Material.Filled.Info"
                       Color="@Color.Inherit"
                       Title="About"
                       Href="https://github.com/codemonkey85/SoundTest"
                       Target="_blank" />
        <MudSpacer />
        <MudSwitch @bind-Checked="@isDarkMode"
                   Color="Color.Primary"
                   Label="@(isDarkMode ? "Dark" : "Light")" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
